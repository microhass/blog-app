require 'rails_helper'

<div class="user-list">
    <%= link_to user_path(user.id) do %>
        <div class="avatar">
            <img src="<%= user.photo %>" alt="<%= user.name %> photo">
        </div>
        <div class="user-info">
            <p class="name">
                <%= user.name %>
            </p>
            <p class="user-posts-count">
                Number of posts: <%= user.posts.length %>
            </p>
        </div>
    <% end %>
</div>